{
  "name": "perfect-ui-workspace",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng build @perfectui/toastr && ng build @perfectui/dialog && ng serve demo",
    "build": "ng build",
    "build:toastr": "ng build @perfectui/toastr --configuration production",
    "build:dialog": "ng build @perfectui/dialog --configuration production",
    "build:libs": "ng build @perfectui/toastr --configuration production && ng build @perfectui/dialog --configuration production",
    "build:demo": "ng build demo --configuration production",
    "build:all": "npm run build:libs && npm run build:demo",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "publish:toastr": "cd dist/toastr && npm publish --access public",
    "publish:dialog": "cd dist/dialog && npm publish --access public"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "packageManager": "npm@10.9.2",
  "dependencies": {
    "@angular/common": "^21.0.0",
    "@angular/compiler": "^21.0.0",
    "@angular/core": "^21.0.0",
    "@angular/forms": "^21.0.0",
    "@angular/platform-browser": "^21.0.0",
    "@angular/router": "^21.0.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^21.0.4",
    "@angular/build": "^21.0.4",
    "@angular/cli": "^21.0.4",
    "@angular/compiler-cli": "^21.0.0",
    "ng-packagr": "^21.0.1",
    "typescript": "~5.9.2"
  }
}
